<h1 class="text-center mt-4"> Category: 
<%= @category.name %>
</h1>

<div class="d-flex justify-content-center">
    <% if logged_in? && current_user.admin? %>
        <%= link_to "Edit #{@category.name.capitalize} Category", edit_category_path(@category),  class:"btn btn-outline-info mt-4" %>
    <% end %>
</div>
<div class="container">    
        <h3 class="text-center mt-4 ">  Articles</h3>
        <div class="flickr_pagination mb-4"> 
            <%= will_paginate @category_articles, :container => false %>
        </div>
        <%= render 'articles' %>
</div>