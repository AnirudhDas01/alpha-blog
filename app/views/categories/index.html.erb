<h1 class = "text-center mt-4 ">Alpha Categories</h1>

        <div class="flickr_pagination mb-4"> 
            <%= will_paginate @categories, :container => false %>
        </div>
        <div class=" container col-4 mt-4" >
            <% @categories.each do|category| %>
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-body">
                        <h5 class="card-title color-green"> <%= link_to category.name, category_path(category), class: "text-success text-decoration-none text-uppercase" %></h5>
                    </div>
                    <div class="card-footer text-muted">
                        <%= time_ago_in_words(category.created_at) %>
                    </div>
                </div>
            <% end %>
        </div>

