<h1 class="text-center">Log in</h1>

<div class = "container">

        <div class ="container bg-info p-4 rounded shadow">
            <%= form_with(scope: :session, url: login_path , local: true) do |f| %>

                <div class= "form-group row font-weight-bold mb-4">
                    <%= f.label :email ,class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                    <%= f.email_field :email ,class: "form-control shadow", placeholder: "Enter Email" %>
                    </div>
                </div>
             
                <div class= "form-group row font-weight-bold ">
                    <%= f.label :password ,class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                    <%= f.password_field :password ,class: "form-control shadow", placeholder: "Enter Password" %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center mt-4">
                <%= f.submit "Log In", class: "btn btn-outline-light btn-lg custom-btn" %>
                </div>
            <% end %>

    </div>
</div>