<h1 class = "text-center">Alpha Bloggers</h1>

<div class="flickr_pagination mb-4"> 
    <%= will_paginate @users, :container => false %>
</div>
    <% @users.each do|user| %>
        <div class=" container" >
            <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header">
                <%= link_to "#{user.username}", user_path(user), class: "link-primary link-underline-opacity-0 uppercase text-uppercase " %>
            </div>
            <div class="card-body">
                <%= gravatar_for(user , size: 200) %>
                <p class="text-uppercase font-weight-bold">Article: <%= user.articles.length %></p>
                <% if logged_in? && user == current_user || current_user.admin? %>
                    <% if current_user.admin? %>
                        <%= link_to 'Delete',user_path(user), class: "btn btn-outline-danger", data:{turbo_method: :delete, turbo_confirm: "Are you sure, you want to delete the Profile.?"} %>
                    <% end %>
                <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-outline-info" %>

                <% end %>
                <%= link_to 'View Profile', user_path(user), class: "btn btn-outline-success" %>
            </div>
            <div class="card-footer text-muted">
            <small> Joined <%= time_ago_in_words(user.created_at) %> ago</small>
                
            </div>
            </div>
        </div>
    <% end %>
</div>
