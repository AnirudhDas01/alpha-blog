<% if @article.errors.any? %>
    <div class="alert alert-danger " role="alert">

        <h3>The following error(s) have occurred:</h3>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg   %></li>
            <% end %>
        </ul>
    </div>     
<% end %>